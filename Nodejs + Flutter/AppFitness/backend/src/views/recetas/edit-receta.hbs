<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>
                Editar receta
            </h3>
        </div>
        <div class="card-body">
           <form action="/recetas/edit-receta/{{receta._id}}?_method=PUT" method="post">
              <input type="hidden" name="_method" value="PUT">
               <div class="form-group">
                <input type="text" name="nombre" 
                class="form-control"
                value="{{receta.nombre}}"> 
               </div>
               <div class="form-group">
                 <textarea name="descripcion" class="form-control">{{receta.descripcion}}

               </textarea>
               </div>
               <div class="form-group">
                   <button class="btn btn-primary btn-block" type="submit">Save

                   </button>
               </div>
              
               
           </form>

        </div>
    </div>

</div>