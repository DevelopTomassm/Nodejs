<form action="/Escenario/add" method="post">
	<fieldset>
		<legend class="title2"><strong> Nuevo escenario</strong></legend>
		<div class="m-5">
			
					<div class="row">
				<div class="col">
		<label class="titleEscenario">Nombre</label>
		<input type="text" name="nombreEscenario" class="form-control" placeholder="Introduce el nombre del escenario">
		</div>
			
		<div class="col">
		<label class="titleEscenario">Ubicacion</label>
		<input type="text" name="ubicacion"  class="form-control" placeholder="Introduce la ubicacion del escenario">
		</div>
		<div class="col">
		<label class="titleEscenario">Energia vital</label>
		<input type="text" name="energiaVital"  class="form-control" placeholder="Introduce la energia vital del escenario ">
		</div>
		</div>
		</div>
		<div class="m-5">
		<div class="row">
				<div class="col">
		<label class="titleEscenario">Numero de superheroes</label>
		<input type="text" name="numeroSuperheroes"  class="form-control" placeholder="Introduce el numero de superheroes del escenario">
		</div>
		<div class="col">
		<label class="titleEscenario">Numero de movimientos</label>
		<input type="text" name="numeroMovimientos"  class="form-control" placeholder="Introduce el numero de movimientos del escenario">
		</div>
		<div class="col">
		<label class="titleEscenario">Monedas</label>
		<input type="text"  name="monedas"  class="form-control" placeholder="Introduce el numero de monedas del escenario">
		</div>
		</div>
		</div>
		<br><br>
		<div class="title2">
		<button class="btn btn-primary">Crear escenario</button>
	</fieldset>
</form>